<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <link rel="stylesheet" href="/bootstrap-3.3.7/dist/css/bootstrap.min.css">
      <link rel="stylesheet" href="/jquery-ui-1.11.4.custom/jquery-ui.min.css">
      <link rel="stylesheet" href="/css/common.css">
      <title>Update Work Roll Entry</title>
   </head>
   <body style="background-color:lavender;">
      <div id="navigation"></div>
      <br><br>
      <div class="container">
         <div class="page-header">
           <title>Update Work Roll Entry</title>
         </div>
         <div class="container">
            <form class="form-horizontal" method="POST" action="/updateEntry/updateWorkRollEntry" id="form">

              <div class="form-group has-success has-feedback">
                 <label class="col-sm-2 control-label" for="roll">Work Roll Name</label>
                 <div class="col-sm-10">
                    <input class="form-control roll" id="name" name="name"  type="text" value="<%= name %>" form="form" autofocus required>
                 </div>
              </div>

               <div class="form-group has-warning has-feedback">
                  <label class="col-sm-2 control-label" for="m_no">Machine Name</label>
                  <div class="col-sm-10">
                     <input class="form-control m_no" id="m_no" name="m_no"  type="text" value="<%= m_no %>" form="form" required>
                  </div>
               </div>

               <div class="form-group has-error has-feedback">
                  <label class="col-sm-2 control-label" for="m_up">Machine Up Time</label>
                  <div class="col-sm-10">
                     <input class="form-control" id="m_up" name ="m_up" min="2000-01-01T00:01" max="9999-01-01T00:01" type="datetime-local" form="form" required>
                  </div>
               </div>

               <div class="form-group has-success has-feedback">
                  <label class="col-sm-2 control-label" for="m_down">Machine Down Time</label>
                  <div class="col-sm-10">
                     <input class="form-control" id="m_down" name ="m_down" min="2000-01-01T00:01" max="9999-01-01T00:01" type="datetime-local" form="form" required>
                  </div>
               </div>

               <div class="form-group has-warning has-feedback">
                  <label class="col-sm-2 control-label" for="reason">Reason</label>
                  <div class="col-sm-10">
                     <input class="form-control reason" id="reason" name="reason" type="text" value="<%= reason %>" form="form" required>
                  </div>
               </div>

               <div class="form-group has-error has-feedback">
                  <label class="col-sm-2 control-label" for="g_time">Grinding Completed Time</label>
                  <div class="col-sm-10">
                     <input class="form-control" id="g_time" name ="g_time" min="2000-01-01T00:01" max="9999-01-01T00:01" type="datetime-local" form="form" required>
                  </div>
               </div>

               <div class="form-group has-success has-feedback">
                  <label class="col-sm-2 control-label" for="dia">Diameter</label>
                  <div class="col-sm-10">
                     <input class="form-control" id="dia" name="dia" type="text" value="<%= dia %>" form="form" required>
                  </div>
               </div>

               <div class="form-group has-warning has-feedback">
                  <label class="col-sm-2 control-label" for="operator">Grinding Operator</label>
                  <div class="col-sm-10">
                     <input class="form-control operator" id="operator" name="operator" type="text" value="<%= operator %>" form="form" required>
                  </div>
               </div>

               <div class="form-group has-error has-feedback">
                  <label class="col-sm-2 control-label" for="comment">Comment</label>
                  <div class="col-sm-10">
                     <input class="form-control" id="comment" name="comment" type="text" value="<%= comment %>" form="form" required>
                  </div>
               </div>
               <input type="hidden" name="index" value="<%= index %>" form="form" required readonly>
               <input type="hidden" name="oldname" value="<%= name %>" form="form" required readonly>


               <div class="form-group">
                  <label class="col-sm-2 control-label"></label>
                  <div class="col-sm-5">
                     <input class="btn btn-warning btn-lg" type="submit" >
                  </div>
               </div>
               <div class="form-group">
                  <label class="col-sm-2 control-label"></label>
                  <div class="col-sm-9">
                    <span id="message"><%- message %></span>
                  </div>
               </div>
            </form>
         </div>
      </div>
      <div class="container" id="zoomFeatures"></div>
   </body>
   <script type="text/javascript" src="/javascript/jquery.min.js"></script>
   <script type="text/javascript" src="/javascript/common.js"></script>
   <script type="text/javascript" src="/javascript/updateEntry/common.js"></script>
   <script type="text/javascript" src="/jquery-ui-1.11.4.custom/jquery-ui.min.js"></script>
   <script type="text/javascript" src="/bootstrap-3.3.7/dist/js/bootstrap.min.js"></script>
   <script>
   Number.prototype.AddZero= function(b,c){
    var  l= (String(b|| 10).length - String(this).length)+1;
    return l> 0? new Array(l).join(c|| '0')+this : this;
  }
  function localDateTime(d){
      temp = [
         d.getFullYear(), (d.getMonth()+1).AddZero(), d.getDate().AddZero()].join('-') +'T' +
        [d.getHours().AddZero(),
         d.getMinutes().AddZero()].join(':');
      return temp;
    }
      $(function() {
        dataListForMachineName();
        dataListForWorkRollName("both");
        dataListForWorkRollReason();
        dataListForWorkRollOperator();

        document.getElementById("m_up").value = localDateTime(new Date("<%= m_up %>"));
        document.getElementById("m_down").value = localDateTime(new Date("<%= m_down %>"));
        document.getElementById("g_time").value = localDateTime(new Date("<%= g_time %>"));

        $("#update_entry").attr("class", "active");

        $("#form").submit(function(e) {
          $("#roll").val($("#roll").val().toLowerCase().trim().replace(/\s\s+/g, ' '));
          $("#m_no").val($("#m_no").val().toLowerCase().trim().replace(/\s\s+/g, ' '));
          $("#reason").val($("#reason").val().toLowerCase().trim().replace(/\s\s+/g, ' '));
          $("#dia").val($("#dia").val().toLowerCase().trim().replace(/\s\s+/g, ' '));
          $("#operator").val($("#operator").val().toLowerCase().trim().replace(/\s\s+/g, ' '));
          $("#comment").val($("#comment").val().toLowerCase().trim().replace(/\s\s+/g, ' '));

          if(!$("#reason").val())
            $("#reason").val('-');
          if(!$("#dia").val())
            $("#dia").val('-');
          if(!$("#operator").val())
            $("#operator").val('-');
          if(!$("#comment").val())
            $("#comment").val('-');

          checkIfMachineExists($("#m_no").val(), e, false);
          checkIfWorkRollExists($("#roll").val(), e, false);
        });
      });
   </script>
</html>
